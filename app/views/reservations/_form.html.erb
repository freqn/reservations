<%= form_with(model: [ @table, @table.reservations.build ], local: true) do |form| %>
  <p>
    <%= form.label :start, 'Reservation Time' %><br>
    <%= form.datetime_select :start, :ampm => true, :minute_step => 30 %>
  </p>
  <p>
    <%= form.label :duration, 'Reservation Length in Hours' %><br>
    <%= form.number_field :duration, min: 2, max: 8, step: 0.5, value: 2 %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
