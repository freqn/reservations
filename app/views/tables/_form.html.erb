<% if @table.errors.any? %>
  <div id="error_explanation">
    <h2>
      The following errors prevented this table from being saved:
    </h2>
    <ul>
      <% @table.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @table, local: true, class: "form" do |form|  %>
  <div class="form-group">
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, placeholder: 'a new table', class: 'form-control' %>
    </p>
  </div>

  <div class="form-group"
    <p>
      <%= form.label :seats %><br>
      <%= form.number_field :seats, min: 2, max: 10, step: 1, value: 6, class: 'form-control' %>
    </p>
  </div>

  <p>
    <%= form.submit class: 'btn btn-primary' %>
  </p>
<% end %>
