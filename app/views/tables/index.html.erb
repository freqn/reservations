<table class='table table-striped table-bordered'>
  <caption>Tables</caption>
  <tr>
    <th>Name</th>
    <th>Seats</th>
  </tr>

  <% @tables.each do |table| %>
    <tr>
      <td class='col-lg-2'><%= table.name %></td>
      <td class='col-lg-1'><%= table.seats %></td>
      <td class='col-lg-1'><%= link_to 'View', table_path(table), class: 'btn btn-info btn-block'%></td>
      <td class='col-lg-1'><%= link_to 'Edit', edit_table_path(table), class: 'btn btn-warning btn-block'%></td>
      <td class='col-lg-1'><%= link_to 'Delete', table_path(table), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add table', new_table_path, class: 'btn btn-primary btn-lg' %>
