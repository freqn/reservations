<h1>List of tables</h1>

<%= link_to 'New Table', new_table_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Seats</th>
  </tr>

  <% @tables.each do |table| %>
    <tr>
      <td><%= table.name %></td>
      <td><%= table.seats %></td>
      <td><%= link_to 'View', table_path(table)%></td>
      <td><%= link_to 'Edit', edit_table_path(table)%></td>
      <td><%= link_to 'Delete', table_path(table), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
